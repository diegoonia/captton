@model TF_Base.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "../Layout.cshtml";
}

<div class="text-center">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <br />
    <fieldset>
        <legend>Login</legend>

        <div class="editor-label">
            Usuario
        </div>
        <div class="editor-field">
            @Html.EditorFor(f => f.UserName)
            @Html.ValidationMessageFor(f => f.UserName)
        </div>

        <br />
        <div class="editor-label">
            Contraseña
        </div>
        <div class="editor-field">
            @Html.PasswordFor(f => f.Password)
            @Html.ValidationMessageFor(f => f.Password)
        </div>

        <br />
            @Html.EditorFor(f => f.RememberMe)
            @Html.ValidationMessageFor(f => f.RememberMe)
            Remember me
            

        <br /><br />
        <input class = "btn btn-primary" type="submit" value="Ingresar" />
        <br /><br />
        Si no tenés cuenta, @Html.ActionLink("Registrarte aquí", "Register")
            
    </fieldset>
}
</div>